<h1>Menu</h1>
<div class="btn-group">
  <% @sections.each do |section| %>
    <%= link_to section.name, menu_path(section_id: section.id), 
      class: "btn #{params[:section_id] == section.id.to_s ? 'active' : 'blue'}"%>
  <% end %>

  <% if @current_section.present? %>
    <div class="sort-food-item right">
      <a class='dropdown-button btn grey' href='#' data-activates='sort-dropdown'>Sort</a>
      <ul id='sort-dropdown' class='dropdown-content'>
        <li>
          <%= link_to "Alphabetical", 
            menu_path(section_id: @current_section.id, sort: 'alphabetical') %>
        </li>
        <li>
          <%= link_to "Price low to high", 
            menu_path(section_id: @current_section.id, sort: 'priceasc') %>
        </li>
        <li>
           <%= link_to "Price high to low", 
            menu_path(section_id: @current_section.id, sort: 'pricedesc') %>
        </li>
      </ul>
    </div>
    <%= render @food_items unless @food_items.blank? %>
  <% end %>
</div>